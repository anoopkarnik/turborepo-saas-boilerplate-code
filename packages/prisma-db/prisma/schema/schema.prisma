generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema","prismaSchemaFolder","fullTextSearchPostgres"]
  output   = "../../../../node_modules/@prisma/prisma/client"
  binaryTargets = ["native", "linux-musl", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POSTGRES")
  schemas = ["boilerplate_schema","scrapeflow_schema","aicompanion_schema"]
}


