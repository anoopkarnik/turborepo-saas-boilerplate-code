model PhotoAIUser {
    id          String   @id @default(cuid())
    username      String  
    profilePicture    String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@schema("photoai_schema")
}

enum ModelyTypeEnum {
    Man
    Woman
    Others

    @@schema("photoai_schema")
}

enum EthnicityEnum {
  White
  Black
  Asian_American        
  East_Asian            
  South_East_Asian       
  South_Asian          
  Middle_Eastern        
  Pacific_Islander      
  Hispanic

  @@schema("photoai_schema")
}

enum EyeColorEnum {
    Brown
    Blue
    Gray
    Hazel

    @@schema("photoai_schema")
}

enum ModelTrainingStatusEnum {
    Pending
    Generated
    Failed

    @@schema("photoai_schema")
}

model PhotoModel {
    id          String   @id @default(cuid())
    name        String
    type        ModelyTypeEnum
    age         Int
    ethnicity   EthnicityEnum
    eyeColor    EyeColorEnum
    bald        Boolean

    triggerWord String?
    tensorPath String?
    trainingStatus ModelTrainingStatusEnum @default(Pending)
    falAiRequestId String?  
    zipUrl      String

    outputImages OutputImages[]

    userId      String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@schema("photoai_schema")
}


enum OutputStatusEnum {
    Pending
    Generated
    Failed

    @@schema("photoai_schema")
}

model OutputImages {
    id          String   @id @default(cuid())
    imageUrl    String
    modelId     String
    prompt      String
    status      OutputStatusEnum @default(Pending)
    falAiRequestId String?       

    model       PhotoModel @relation(fields: [modelId], references: [id], onDelete: Cascade)
    userId      String

    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@schema("photoai_schema")
}

model Packs {
    id          String   @id @default(cuid())
    name        String
    prompts     PackPrompts[]

    @@schema("photoai_schema")
}

model PackPrompts {
    id          String   @id @default(cuid())
    packId      String
    prompt      String
    pack        Packs @relation(fields: [packId], references: [id], onDelete: Cascade)

    @@schema("photoai_schema")
}