{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "strict": true,
    "types": ["vitest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "middleware.ts",
    "tests/**/*.ts",
    "../../packages/**/*.ts",
    "../../packages/**/*.tsx"
   ],
  "exclude": [
    "node_modules"
  ]
}
